body {
    font-family: Arial, sans-serif;
    text-align: center;
}

table {
    width: 80%;
    margin: auto;
    border-collapse: collapse;
}

th, td {
    border: 1px solid #ddd;
    padding: 8px;
}

th {
    background-color: #007bff;
    color: white;
}
document.addEventListener("DOMContentLoaded", () => {
    const flightData = JSON.parse(`YOUR_JSON_DATA_HERE`);
    const tableBody = document.querySelector("#flightTable tbody");

    flightData.data.forEach(flight => {
        const row = document.createElement("tr");
        row.innerHTML = `
            <td>${flight.aircraft ? flight.aircraft.iata : "N/A"}</td>
            <td>${flight.airline.name}</td>
            <td>${flight.flight.iata}</td>
            <td>${flight.departure.airport}</td>
            <td>${new Date(flight.departure.actual).toLocaleString()}</td>
            <td>${new Date(flight.arrival.estimated).toLocaleString()}</td>
        `;
        tableBody.appendChild(row);
    });
});
